{# layouts to extend #}
{% extends "layouts/base_less.njk" %}

{% set activNavElement = "home" %}

{% block header %}
    <div class="l-container">
        <img class="welcome-logo" src="../assets/img/logo.svg" alt="Thomas photography logo">
    </div>
{% endblock %}

{% block content %}
    <div class="c-sitebanner">
        <img class="c-sitebanner__img" src="/assets/img/page_banners/banner.jpg" alt="site- banner">
    </div>

    <main>
        <div class="l-container centered-text">
            <h2 class="c-h2">Accueil</h2>
            <p class="welcome-intro text-intro">Choisissez une rubrique qui vous int√©resse et laissez vous emporter par mon univers</p>

            <nav>
                {% for navitem in nav %}
                    {% if loop.first %}
                        <ul class="welcome-nav">
                    {% else %}
                        <li>
                            <a class="welcome-navlink" href="{{ navitem.url }}">{{ navitem.label }}</a>
                        </li>
                    {% endif %}

                    {% if loop.last %}
                        </ul>
                    {% endif %}
                {% endfor %}
            </nav>
        </div>
    </main>
{% endblock %}