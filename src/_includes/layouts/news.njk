{# layouts to extend #}
{% extends "layouts/base.njk" %}

{# set variables #}
{% set htmlTitle = title %}
{% set activNavElement = "news" %}

{% block content %}
    <div class="c-sitebanner">
        <img class="c-sitebanner__img" src="/assets/img/page_banners/{{ image }}" alt="{{ title }}">
    </div>

    <main class="l-container">
        <div class="c-news-detail">
            <div class="c-news-detail__content">
                <h3 class="c-h3  c-h3--news c-news-detail__title">{{ title }}</h3>
                {{ content | safe }}
                <p class="c-news-detail__model">Mod√®le: {{ modele }}</p>
                <p class="c-nav-highlight"><a class="c-nav-highlight__link" href="{{ externalLink }}">Voir les photos</a></p>
            </div>
        </div>
    </main>
{% endblock %}