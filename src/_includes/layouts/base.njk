{% set containerClass = "l-container"  %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ htmlTitle ~ " - " if htmlTitle }}{{ site.title }}</title>
    <meta type="description" content="{{ htmlDesc if htmlDesc else site.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="{{ htmlTitle ~ " - " if htmlTitle }}{{ site.title }}">
    <meta property="og:url" content="{{ site.baseUrl + htmlUrl if htmlTitle else site.url }}">
    <meta property="og:image" content="{{ htmlImg if htmlImg else '/assets/img/page_banners/meta_banner.jpg' }}">
    <meta property="og:description" content="{{ htmlDesc if htmlDesc else site.description }}">
    <link rel="stylesheet" href="/assets/css/main.min.css">
</head>
<body class="l-split-layout">

    {% include "partials/siteheader.njk" %}

    {% block content %}{% endblock %}

    {% include "partials/sitefooter.njk" %}
    <script src="/assets/js/bundle.js"></script>
</body>
</html>